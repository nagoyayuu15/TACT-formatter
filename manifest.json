{
	"name": "TACT-formatter",
	"manifest_version": 3,
	"description": "better UI for TACT",
	"version": "1.0",
	"permissions": [
		"activeTab",
		"scripting",
		"storage"
	],
	"action": {
		"default_icon": {
			"16": "images/TimeTable.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"https://tact.ac.thers.ac.jp/*"
			],
			"js": [
				"script.js"
			],
			"css": [
				"style.css"
			]
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "tactFormatterForFireFox@hbenpitsu.net",
			"update_url": "https://vps.hbenpitsu.net/TTFF/updates.json",
			"strict_min_version": "109.0"
		}
	}
}